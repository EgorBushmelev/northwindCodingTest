<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bit.CodingTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/components-font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/angular-sweetalert-2/SweetAlert.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.js"></script>
    <script src="~/lib/underscore/underscore-min.js"></script>
    <script src="~/lib/custom-input/dist/custom-input.js"></script>
    <script src="~/lib/angular-datetime-input/dist/datetime.js"></script>
</head>
<body ng-app="bctApp">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Orders" asp-action="Index" class="navbar-brand">Bit.CodingTest</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="Orders" asp-action="Create">Create new order</a></li>
            </ul>
        </div>
    </div>
</div>
    
<script>
    angular.module("bctApp", ["19degrees.ngSweetAlert2", "ui.bootstrap", "datetime"]);
</script>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2017 - Bit.CodingTest</p>
    </footer>
</div>
</body>
</html>
